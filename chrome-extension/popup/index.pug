doctype html
html(lang="en")
    head
        meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
        -
            var styleList = [
                "/css/bootstrap.min.css",
                "css/nano.min.css",
                "css/popup.css"
            ]

        each style in styleList
            link(href=style, rel="stylesheet")

    body(style="width: 800px;")
        .container-fluid
            .card.mt-3
                h6.card-header 顏色設定
                .card-body
                    .container
                        #base-color-picker
                            .row
                                .col.dropdown.show
                                    a.btn.btn-primary.dropdown-toggle.col-12.mb-2#theme-selection-dropdown(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    .dropdown-menu#theme-selection-dropdown-item-container(aria-labelledby="dropdownMenuLink")
                            .row
                                .col
                                    
                                    //- mixin spPopupPanel(id, i, bg)
                                    //-     .modal.fade(id=id tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
                                    //-         .modal-dialog(role="document")
                                    //-             .modal-content
                                    //-                 .modal-body
                                    //-                     .row
                                    //-                         .col-4
                                    //-                             button.sp-color-demo-button-big(class="b" + i + " " + "q" + bg, type="button", data-toggle="modal" data-target="#popup" + "b" + i + "q" + bg)="字"
                                    //-                         .col-8

                                                    //- .modal-footer
                                                    //-     button(type="button" class="btn btn-secondary" data-dismiss="modal")="Close"
                                                    //-     button(type="button" class="btn btn-primary")="Save changes"
                                    mixin spPopover(i, bg)
                                        div(style="display: none")
                                            div(class="sp-popover-panel")
                                                .container
                                                    .row
                                                        .col-4="字體色："
                                                        .col-8
                                                            div(class="pickr-" + "b" + i + "q" + bg + "-b")
                                                    .row
                                                        .col-4="背景色："
                                                        .col-8
                                                            div(class="pickr-" + "b" + i + "q" + bg + "-q")

                                    mixin baseColorRow(text, name1, name2, bg)
                                        .row.mt-2.d-flex.align-items-center
                                            .col-2=text
                                            .col-1
                                                .row
                                                    div(class="pickr-" + name1)
                                                    span=" "
                                                    div(class="pickr-" + name2)
                                            .col-9
                                                .row
                                                    .col.ml-4.mr-3
                                                        .row
                                                            - for (var i = 0; i <= 7; i++)
                                                                .col(style="padding:0px;")
                                                                    .dot(class="b" + i + " " + "q" + bg, hidden="true")
                                                                    //- +spPopupPanel("popup" + "b" + i + "q" + bg, i, bg)
                                                                    //- var popupPanel='<div class="popover" role="tooltip"><div class="arrow"></div><h3 class="popover-header"></h3><div class="popover-body"></div></div>'
                                                                    //- button(class="b" + i + " " + "q" + bg, type="button", data-toggle="modal" data-target="#popup" + "b" + i + "q" + bg template=popupPanel)="字"
                                                                    //- +spPopover(i, bg)
                                                                    //- a.sp-color-demo-button.btn(class="b" + i + " " + "q" + bg b=i q=bg)="字"
                                                                    button.sp-color-demo-button.btn(class="b" + i + " " + "q" + bg b=i q=bg type="button" role="button" data-toggle="popover" data-trigger="click" data-html="true"
                                                                        data-content='<div class="container"><div class="row"><div class="col-8">字體顏色</div><div class="col-4"><div class="pickr-b' + i + 'q' + bg + '-b"></div></div>')="字"

                                                    .col.mr-3
                                                        .row
                                                            - for (var i = 0; i <= 7; i++)
                                                                .col(style="padding:0px;")
                                                                    .dot(class="b" + i + " " + "q" + bg, hidden="true")
                                                                    
                                                                    //- +spPopover(i, bg + 8)
                                                                    //- a.sp-color-demo-button.btn(class="b" + i + " " + "q" + (bg + 8) b=i q=(bg + 8))="字"
                                                
                                    -
                                        var baseColorDict = {
                                            "white": {
                                                ch: "白",
                                                code: 7
                                            },
                                            "black": {
                                                ch: "黑",
                                                code: 0
                                            },
                                            "red": {
                                                ch: "紅",
                                                code: 1
                                            },
                                            "green":{
                                                ch: "綠",
                                                code: 2
                                            },
                                            "yellow":{
                                                ch: "黃",
                                                code: 3
                                            },
                                            "blue":{
                                                ch: "藍",
                                                code: 4
                                            },
                                            "magenta":{
                                                ch: "粉",
                                                code: 5
                                            },
                                            "cyan": {
                                                ch: "青",
                                                code: 6
                                            }
                                        }

                                    each val, en in baseColorDict
                                        +baseColorRow(val.ch+"＆亮"+val.ch, en, en+"-light", val.code)
                                //- .col-9
                                //-     mixin specialColorCol(wordColor)
                                //-         - for (var x = 0; x <= 7; x++)
                                        
                                //-             .col
                                //-                 button(class = wordColor + " " + en, type="button")

                                //-     mixin specialColorRow()
                                //-         .row
                                //-             specialColorCol()
            .row.justify-content-center.mt-1.mb-3
                a.mr-1(href="https://github.com/petingo/ptt-theme", target="_blank", style="color: #28415b") 網站
                span(style="color: #555") |
                a.ml-1(href="https://github.com/petingo/ptt-theme", target="_blank", style="color: #28415b") Github

            .container
                .row
                    .col-6="字"
                    .col-6="調色盤"
                .row
                    .col-6="字"
                    .col-6="調色盤"
                

        -
            var scriptList = [
                "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js",
                "https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js",
                "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js",
                "/js/init.js",
                "js/pickr.min.js",
                "js/popup.js"
            ]

        each scriptSrc in scriptList
            script(src=scriptSrc)

        script(async, defer, src="https://buttons.github.io/buttons.js")